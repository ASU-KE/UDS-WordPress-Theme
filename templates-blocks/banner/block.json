{
    "name": "acf/uds-banner",
    "title": "UDS Banner",
    "description": "A UDS compliant banner, with customizable text and styles.",
    "category": "uds",
    "icon": "info-outline",
    "keywords": ["banner", "message", "text"],
    "acf": {
        "mode": "preview",
        "renderTemplate": "banner.php",
        "validate": false
    },
    "supports": {
        "align": false
    },
    "example": {
        "attributes": {
            "mode": "preview",
            "data": {
                "uds_banner_color": "blue",
                "uds_banner_icon": "info-circle",
                "show_close_button": true,
                "uds_banner_title": "Your title here",
                "uds_banner_text": "Your banner text goes here."
            }
        }
    }
}